<Window x:Class="LTTQ_DoAn.View.ChangeService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:LTTQ_DoAn.ViewModel"
        xmlns:local="clr-namespace:LTTQ_DoAn.View"
        xmlns:resource="clr-namespace:LTTQ_DoAn.Resource"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Sửa dịch vụ" Height="450" Width="700"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Resources>
        <resource:VndCurrencyConverter x:Key="VndCurrencyConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <viewmodel:ChangeServicesViewModel></viewmodel:ChangeServicesViewModel>
    </Window.DataContext>
    <Border
    CornerRadius="20"
    Background="White"
    BorderBrush="{StaticResource btnActivedText}"
    BorderThickness="3"
    >
        <Grid Margin="0,0,1,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <!--nút thu nhỏ và tắt màn-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Button_Click"
                        Style="{StaticResource controlButton}"
                        FontSize="16">
                    <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}"/>
                </Button>
                <Button
                        Style="{StaticResource controlButton}"
                        Command="{Binding CancelCommand}"
                        FontSize="16">
                    <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                </Button>
            </StackPanel>
            <!--tiêu đề-->
            <Border
                    BorderBrush="{StaticResource btnActivedText}"
                    BorderThickness="0 0 0 2" Grid.Row="1">
                <TextBlock
                        Margin="30 10 0 0 "
                        Text="Thông tin dịch vụ khám"
                        FontSize="32"
                        Foreground="{StaticResource btnActivedText}"
                        FontFamily="Poppins"
                        FontWeight="Medium"
                        />
            </Border>
            <!--các thông tin-->
            <Grid Margin="50 40" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <!--tên dịch vụ-->
                    <StackPanel Margin="0 0 0 30">
                        <TextBlock Style="{StaticResource TitlePersonalInfo}"
                                   Text="Tên dịch vụ:"
                                   FontSize="16"
                                   Margin="0 0 0 8"
                                   />
                        <TextBox Text="{Binding Dichvu.TENDICHVU}"
                                 Height="45"
                                 FontSize="16"
                                 Background="Transparent"
                                 Foreground="{StaticResource infoText}"
                                 CaretBrush="LightGray"
                                 BorderThickness="0 0 0 2"
                                 HorizontalAlignment="Stretch"
                                 Padding="0 8 0 8"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="{StaticResource btnActivedText}">
                        </TextBox>
                    </StackPanel>
                    <!--giá-->
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitlePersonalInfo}"
                                   Text="Giá (VNĐ):"
                                   FontSize="16"
                                   Margin="0 0 0 8"
                                   />
                        <TextBox Text="{Binding Dichvu.GIATIEN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VndCurrencyConverter}}"
                                 Height="45"
                                 FontSize="16"
                                 Background="Transparent"
                                 Foreground="{StaticResource infoText}"
                                 CaretBrush="LightGray"
                                 BorderThickness="0 0 0 2"
                                 HorizontalAlignment="Stretch"
                                 Padding="0 8 0 8"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="{StaticResource btnActivedText}"
                                 PreviewTextInput="TextBox_PreviewTextInput">
                        </TextBox>
                    </StackPanel>
                </StackPanel>
                <!--ảnh minh họa-->
                <Image HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Stretch="Uniform" 
                       Grid.Column="1" 
                       Source="/Photo/health-check.png"
                       Height="200"
                       Margin="20 0 0 0"/>
            </Grid>
            <!--2 nút điều khiển-->
            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 40 0">
                <Button
                    Command="{Binding ConfirmChangeCommand}"
                    Width="130"
                    Height="50"
                    Content="Xác nhận"
                    FontSize="18"
                    Foreground="#f2f2f2"
                    Background="{StaticResource btnActivedText}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    ToolTip="Lưu thông tin" />
                <Button Margin="30 0 0 0"
                    Command="{Binding CancelCommand}"
                    Width="130"
                    Height="50"
                    Content="Hủy bỏ"
                    FontSize="18"
                    Foreground="#555"
                    Background="#fff"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    />
            </StackPanel>
        </Grid>
    </Border>
</Window>