<UserControl x:Class="LTTQ_DoAn.View.Services"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LTTQ_DoAn.View"
             xmlns:viewmodel="clr-namespace:LTTQ_DoAn.ViewModel"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="644" d:DesignWidth="1049"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:resource="clr-namespace:LTTQ_DoAn.Resource">
    <UserControl.DataContext>
        <viewmodel:ServicesViewModel></viewmodel:ServicesViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <resource:VndCurrencyConverter x:Key="VndCurrencyConverter" />
    </UserControl.Resources>
    <Border Background="White"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0"
                    BorderBrush="{StaticResource buttonText}"
                    BorderThickness="0 0 0 1"
                    Background="White">
                <Grid Margin="20 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#222528"
                               FontFamily="Poppins"
                               Text="Danh sách dịch vụ"/>
                    
                    <Border Grid.Column="1"
                            Background="#F5F5F5"
                            CornerRadius="5"
                            Margin="20 0"
                            VerticalAlignment="Center"
                            Height="35">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <fa:IconImage Grid.Column="0"
                                         Icon="MagnifyingGlass"
                                         Height="16"
                                         Width="16"
                                         Foreground="#7F8F98"
                                         VerticalAlignment="Center"
                                         Margin="12 0 8 0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Poppins"
                                     FontSize="14"
                                     Foreground="#222528"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Padding="0 0 12 0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>
                    
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button 
                            Command="{Binding AddServicesCommand}"
                            Style="{StaticResource BtnUserControl}"
                            Visibility="{Binding AddVisibility, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0 0 10 0">
                            <TextBlock
                                Style="{StaticResource UserControlText}"
                                Text="Thêm dịch vụ">
                            </TextBlock>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <DataGrid x:Name="ServicesGrid" 
                      Grid.Row="1"
                      VerticalAlignment="Stretch"
                      Style="{DynamicResource DataGridStyle1}"
                      CellStyle="{DynamicResource DataGridCellStyle1}"
                      RowStyle="{DynamicResource DataGridRowStyle1}"
                      ItemsSource="{Binding Dichvu}"
                      SelectedItem="{Binding Selecteddichvu}"
                      Margin="20"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã dịch vụ" 
                                        Width="15*"
                                        IsReadOnly="True" 
                                        CanUserResize="False"
                                        Binding="{Binding SUB_ID}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#222528"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Padding" Value="15 12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên dịch vụ" 
                                        Width="35*"
                                        IsReadOnly="True" 
                                        CanUserResize="False"
                                        Binding="{Binding TENDICHVU}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#222528"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Padding" Value="15 12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="#222528"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Giá tiền" 
                                            Width="20*"
                                            IsReadOnly="True" 
                                            CanUserResize="False">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#222528"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Padding" Value="15 12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding GIATIEN, Converter={StaticResource VndCurrencyConverter}}"
                                               FontFamily="Poppins"
                                               FontSize="14"
                                               Foreground="#222528"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text=" đ"
                                               FontFamily="Poppins"
                                               FontSize="14"
                                               Foreground="#222528"
                                               VerticalAlignment="Center"
                                               Margin="3 0 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="20*" 
                                            Header="Thao tác"
                                            IsReadOnly="True" 
                                            CanUserResize="False">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#222528"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Padding" Value="15 12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <RadioButton Command="{Binding DataContext.ChangeServicesCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                 Style="{StaticResource gridOpenButton}"
                                                 Tag="{StaticResource normalButton}"
                                                 Visibility="{Binding DataContext.ChangeVisibility, Converter={StaticResource BoolToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                 Margin="0 0 10 0"
                                                 ToolTip="Sửa dịch vụ"
                                                 Cursor="Hand">
                                        <fa:IconImage Icon="PenToSquare"
                                                      Height="18"
                                                      Width="18"
                                                      Foreground="#3497F9"/>
                                    </RadioButton>
                                    <RadioButton Command="{Binding DataContext.DeleteServicesCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                 Style="{StaticResource gridOpenButton}"
                                                 Tag="{StaticResource normalButton}"
                                                 Visibility="{Binding DataContext.DeleteVisibility, Converter={StaticResource BoolToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                 ToolTip="Xóa dịch vụ"
                                                 Cursor="Hand">
                                        <fa:IconImage Icon="Trash"
                                                      Height="18"
                                                      Width="18"
                                                      Foreground="#DC3545"/>
                                    </RadioButton>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
