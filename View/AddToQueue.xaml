<Window x:Class="LTTQ_DoAn.View.AddToQueue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTTQ_DoAn.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Thêm vào hàng đợi" Height="350" Width="500"
        Background="Transparent"
        xmlns:viewmodel="clr-namespace:LTTQ_DoAn.ViewModel"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Border CornerRadius="20" Background="White" BorderBrush="{StaticResource btnActivedText}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" BlurRadius="20" Opacity="0.3" Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            
            <Border Background="{StaticResource btnActivedText}" CornerRadius="18 18 0 0">
                <Grid>
                    <TextBlock Text="Thêm vào hàng đợi" Foreground="White" FontWeight="SemiBold" 
                               VerticalAlignment="Center" Margin="20 0" FontSize="14"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Click="Button_Minimize" Style="{StaticResource controlButton}" Width="40" Height="40">
                            <fa:IconImage Icon="WindowMinimize" Foreground="White" Height="12"/>
                        </Button>
                        <Button Command="{Binding CancelCommand}" Style="{StaticResource controlButton}" Width="40" Height="40">
                            <fa:IconImage Icon="Xmark" Foreground="White" Height="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Margin="25 0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource btnActivedText}" CornerRadius="10" Padding="12" Margin="0 0 15 0">
                        <fa:IconImage Icon="UserClock" Foreground="White" Height="24"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Thêm bệnh nhân vào hàng đợi" FontSize="20" Foreground="{StaticResource btnActivedText}" 
                                   FontFamily="Segoe UI" FontWeight="SemiBold"/>
                        <TextBlock Text="Chọn bệnh nhân để thêm vào hàng đợi khám bệnh" FontSize="12" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <StackPanel Grid.Row="2" Margin="25 10">
                <TextBlock Text="Chọn bệnh nhân" FontWeight="SemiBold" FontSize="14" Foreground="#424242" Margin="0 0 0 12"/>
                <ComboBox Height="55" FontSize="15"
                    materialdesign:HintAssist.Hint="Tìm kiếm bệnh nhân..."
                    Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                    ItemsSource="{Binding PatientList}"
                    SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                    DisplayMemberPath="DisplayText"
                    IsEditable="False"
                    IsTextSearchEnabled="True"
                    TextSearch.TextPath="DisplayText"/>
            </StackPanel>

            <Border Grid.Row="3" Background="#FAFAFA" CornerRadius="0 0 18 18" Padding="25 15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Command="{Binding CancelCommand}"
                        Width="120" Height="40"
                        Foreground="#616161" Background="White"
                        BorderBrush="#E0E0E0" BorderThickness="1"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        materialdesign:ShadowAssist.ShadowDepth="Depth0">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Xmark" Height="14" Foreground="#616161" Margin="0 0 8 0"/>
                            <TextBlock Text="Hủy" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ConfirmCommand}"
                        Width="140" Height="40" Margin="15 0 0 0"
                        Foreground="White" Background="{StaticResource btnActivedText}"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Check" Height="14" Foreground="White" Margin="0 0 8 0"/>
                            <TextBlock Text="Xác nhận" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
